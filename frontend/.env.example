# Environment Variables Template
# Copy this file to .env.local and customize as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Mock Configuration
# Set to 'true' to use mock data instead of real API
VITE_MOCK_API=true

# Debug Configuration
# Set to 'true' to enable debug logging
VITE_DEBUG_MODE=true

# Application Configuration
VITE_APP_TITLE=Review Analysis System
VITE_APP_VERSION=1.0.0

# Logging Configuration
# Options: 'debug', 'info', 'warn', 'error'
VITE_LOG_LEVEL=debug

# Development Features
# Set to 'true' to enable development tools
VITE_DEV_TOOLS=true

# Authentication (if needed in future)
# VITE_AUTH_ENABLED=false
# VITE_JWT_SECRET=your-jwt-secret

# File Upload Configuration
# VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
# VITE_ALLOWED_FILE_TYPES=text/csv,text/plain,application/json
